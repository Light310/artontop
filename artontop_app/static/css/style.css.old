@import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;700&display=swap');

body, html {
    height: 100%;
    margin: 0;
    font-family: 'Inter', sans-serif;
}

/* Fullscreen Backgrounds */
.screen {
    height: 100vh;
    width: 100vw;
    background-size: cover;
    background-position: center;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

/* Page specific backgrounds */
.bg-main { background-image: url('/static/images/main_page.jpg'); cursor: pointer; }
.bg-auth { background-image: url('/static/images/authorization_page.jpg'); }
.bg-login { background-image: url('/static/images/login_page.png'); }
.bg-reg { background-image: url('/static/images/registration_page.png'); }

/* Landing Page Text */
.title-main { font-size: 80px; letter-spacing: 10px; color: white; margin: 0; }
.subtitle-main { font-size: 20px; color: white; margin-top: 10px; }

/* Auth Page Pill Buttons */
.auth-title { font-size: 64px; color: white; margin-bottom: 30px; }
.btn-pill {
    background: rgba(0, 0, 0, 0.5);
    color: white;
    text-decoration: none;
    padding: 15px 60px;
    margin: 10px;
    border-radius: 30px;
    font-size: 18px;
    width: 250px;
    text-align: center;
    border: 1px solid rgba(255,255,255,0.2);
}

/* Login/Reg Form Style */
.form-container {
    width: 400px;
    text-align: left;
}
.form-title { font-size: 60px; color: black; margin-bottom: 20px; text-align: center; }
.form-group { margin-bottom: 15px; }
.form-group label { display: block; color: #333; font-size: 14px; margin-bottom: 5px; }
.form-group input {
    width: 100%;
    padding: 12px;
    border: 1px solid black;
    font-size: 16px;
}
.btn-submit {
    background: black;
    color: white;
    border: none;
    padding: 12px 30px;
    cursor: pointer;
    font-weight: bold;
}